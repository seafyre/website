---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'Nick | UX Designer & Writer',
	description = 'Personal website with UX portfolio work and blog posts.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<div class="wrap">
				<a class="brand" href="/">Nick</a>
				<nav aria-label="Main navigation">
					<a href="/work">Projects</a>
					<a href="/blog">Blog</a>
					<a href="/about">About</a>
				</nav>
			</div>
		</header>
		<main class="wrap">
			<slot />
		</main>
		<footer class="site-footer wrap">
			<p>Â© {new Date().getFullYear()} Nick. UX freelance practice and personal writing.</p>
			<p><a href="/imprint">Imprint</a></p>
		</footer>
	</body>
</html>

<style>
	:root {
		--bg: #19485f;
		--surface: #19485f;
		--text: #d9e0a4;
		--muted: #d9e0a4;
		--accent: #d9e0a4;
		--line: #d9e0a4;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		font-family: 'Avenir Next', 'Gill Sans', 'Trebuchet MS', sans-serif;
		background: var(--bg);
		color: var(--text);
	}

	:global(a),
	:global(a:link),
	:global(a:visited),
	:global(a:hover),
	:global(a:active) {
		color: var(--text);
	}

	.wrap {
		width: min(980px, calc(100% - 2rem));
		margin: 0 auto;
	}

	.site-header {
		border-bottom: 1px solid var(--line);
		backdrop-filter: blur(2px);
	}

	.site-header .wrap {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem 0;
	}

	.brand {
		font-size: 1.2rem;
		font-weight: 800;
		letter-spacing: 0.08em;
		text-decoration: none;
	}

	nav {
		display: flex;
		gap: 1rem;
	}

	nav a {
		text-decoration: none;
		font-weight: 600;
		color: var(--muted);
	}

	nav a:hover {
		color: var(--accent);
	}

	main {
		padding: 2.25rem 0 2.5rem;
	}

	.site-footer {
		border-top: 1px solid var(--line);
		padding: 1.25rem 0 2rem;
		color: var(--muted);
		font-size: 0.9rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.site-footer p {
		margin: 0.25rem 0;
	}

	.site-footer a {
		text-decoration: none;
		color: var(--muted);
	}

	.site-footer a:hover {
		color: var(--accent);
	}

	@media (max-width: 720px) {
		nav {
			gap: 0.75rem;
			font-size: 0.95rem;
		}

		.site-footer {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
