---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'Nick | UX Designer & Writer',
	description = 'Personal website with UX portfolio work and blog posts.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<div class="wrap">
				<a class="brand" href="/">Nick</a>
				<nav aria-label="Main navigation">
					<a href="/work">Work</a>
					<a href="/blog">Blog</a>
					<a href="/about">About</a>
				</nav>
			</div>
		</header>
		<main class="wrap">
			<slot />
		</main>
		<footer class="site-footer">
			<div class="wrap">
				<p>Â© {new Date().getFullYear()} Nick. UX freelance practice and personal writing.</p>
				<p><a href="/imprint">Imprint</a></p>
			</div>
		</footer>
	</body>
</html>

<style>
	@font-face {
		font-family: 'Inter';
		src: url('../assets/fonts/Inter-VariableFont.ttf') format('truetype');
		font-style: normal;
		font-weight: 100 900;
		font-display: swap;
	}

	@font-face {
		font-family: 'Inter';
		src: url('../assets/fonts/Inter-Italic-VariableFont.ttf') format('truetype');
		font-style: italic;
		font-weight: 100 900;
		font-display: swap;
	}

	:root {
		--bg: #19485f;
		--surface: #19485f;
		--text: #d9e0a4;
		--muted: #d9e0a4;
		--accent: #d9e0a4;
		--line: #d9e0a4;
		--container-max: 900px;
		--container-gutter: 1rem;
	}

	:global(*),
	:global(*::before),
	:global(*::after) {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		font-family: 'Inter', sans-serif;
		font-weight: 300;
		background: var(--bg);
		color: var(--text);
	}

	:global(h1),
	:global(h2),
	:global(h3),
	:global(h4),
	:global(h5),
	:global(h6),
	:global(strong) {
		font-weight: 600;
	}

	:global(button),
	:global([role='button']),
	:global(input[type='button']),
	:global(input[type='submit']),
	:global(input[type='reset']) {
		font-weight: 400;
	}

	:global(a),
	:global(a:link),
	:global(a:visited),
	:global(a:hover),
	:global(a:active) {
		color: var(--text);
	}

	.wrap {
		width: min(var(--container-max), calc(100% - (var(--container-gutter) * 2)));
		margin: 0 auto;
	}

	.site-header {
		border-bottom: 1px solid var(--line);
		backdrop-filter: blur(2px);
	}

	.site-header .wrap {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem 0;
	}

	.brand {
		font-size: 1.2rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-decoration: none;
	}

	nav {
		display: flex;
		gap: 1rem;
	}

	nav a {
		text-decoration: none;
		font-weight: 300;
		color: var(--muted);
	}

	nav a:hover {
		color: var(--accent);
	}

	main {
		padding: 2.25rem 0 2.5rem;
	}

	.site-footer {
	}

	.site-footer .wrap {
		border-top: 1px solid var(--line);
		padding: 1.25rem 0 2rem;
		color: var(--muted);
		font-size: 0.9rem;
		display: grid;
		grid-template-columns: 1fr auto;
		align-items: center;
		gap: 1rem;
	}

	.site-footer p {
		margin: 0;
	}

	.site-footer a {
		text-decoration: none;
		color: var(--muted);
	}

	.site-footer a:hover {
		color: var(--accent);
	}

	@media (max-width: 720px) {
		nav {
			gap: 0.75rem;
			font-size: 0.95rem;
		}

		.site-footer .wrap {
			grid-template-columns: 1fr;
			align-items: flex-start;
		}
	}
</style>
