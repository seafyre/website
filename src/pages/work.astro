---
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/projects';
---

<Layout title="Nick Ringelmann - Projects" description="UX case studies and client outcomes.">
	<h1>Projects</h1>
	<p class="lede">A focused selection of freelance UX projects and measurable outcomes.</p>

	<div class="grid">
		{projects.map((project) => (
			<article class="project-card">
				<a class="card-link" href={`/work/${project.slug}/`} aria-label={`View details for ${project.title}`}></a>
				<p class="client">{project.client}</p>
				<h2>{project.title}</h2>
				<p>{project.summary}</p>
				<p class="outcome">{project.outcome}</p>
			</article>
		))}
	</div>
</Layout>

<style>
	h1 {
		font-size: clamp(1.8rem, 3.2vw, 2.6rem);
		margin-bottom: 0.5rem;
	}

	.lede {
		color: var(--muted);
		margin-bottom: 1.5rem;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 1rem;
	}

	article {
		border: 1px solid var(--line);
		background: var(--surface);
		border-radius: 12px;
		padding: 1rem;
		position: relative;
		transition: border-color 0.2s ease, transform 0.2s ease;
	}

	.project-card:hover {
		border-color: var(--accent);
		transform: translateY(-2px);
	}

	.card-link {
		position: absolute;
		inset: 0;
		border-radius: 12px;
	}

	.card-link:focus-visible {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}

	.client {
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.07em;
		color: var(--muted);
		margin: 0;
	}

	h2 {
		font-size: 1.2rem;
		margin-bottom: 0.5rem;
	}

	.outcome {
		font-weight: 700;
		color: var(--accent);
	}
</style>
